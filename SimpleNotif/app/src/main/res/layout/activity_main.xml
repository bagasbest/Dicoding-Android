<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="35dp"
    android:paddingEnd="35dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSendNotof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kirim_notifikasi"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:onClick="sendNotification" />

    <Button
        android:id="@+id/button_show_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_show_notif"
        android:layout_below="@+id/btnSendNotof"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFC107"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/stack_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stack_notif"
        android:backgroundTint="#9C27B0"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:onClick="stackNotif"
        android:layout_below="@+id/button_show_notification"
        tools:ignore="OnClick" />

</RelativeLayout>