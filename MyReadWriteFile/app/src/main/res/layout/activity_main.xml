<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_subject"
        android:drawableStart="@drawable/ic_subject_black_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/rounded_bg"
        tools:ignore="MissingConstraints"
        android:autofillHints="no"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_above="@+id/fabOpen"
        android:gravity="top|start"
        android:padding="8dp"
        android:layout_below="@+id/etSubject"
        android:background="@drawable/rounded_bg"
        android:autofillHints="no"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine|textNoSuggestions"
        tools:ignore="LabelFor" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fabSave"
        android:src="@drawable/ic_folder_open_black_24dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/colorPrimary" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        app:backgroundTint="@color/colorPrimary" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/colorPrimary" />





</RelativeLayout>